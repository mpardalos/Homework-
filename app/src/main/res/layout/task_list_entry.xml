<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/task_title_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/task_title_font_size"
        android:text="@string/task_title_field"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/task_description_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/task_description_font_size"
        android:text="@string/task_description_field"
        android:layout_below="@id/task_title_field"/>
        <!--Just for seeing the text in the preview, the actual description is set in the code-->

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:onClick=""/>
</RelativeLayout>