<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/task_title_field"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="1"
        android:textSize="@dimen/task_title_font_size"
        android:text="@string/task_title_field"/>

    <TextView
        android:id="@+id/task_description_field"
        android:layout_width="wrap_content"
        android:layout_height="0px"
        android:layout_weight="2"
        android:textSize="@dimen/task_description_font_size"
        android:text="@string/task_description_field"/>
</LinearLayout>