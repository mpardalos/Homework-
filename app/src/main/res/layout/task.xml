<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

    <TextView
        android:id="@+id/subject_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/due_date_field"
        android:layout_toRightOf="@+id/due_date_field"
        android:textColor="#000000"
        android:textSize="@dimen/task_title_font_size"/>

    <TextView
        android:id="@+id/task_description_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/subject_field"
        android:layout_alignStart="@+id/subject_field"
        android:layout_below="@+id/subject_field"
        android:textColor="#000000"
        android:textSize="@dimen/task_description_font_size"/>


    <TextView
        android:id="@+id/due_date_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_gravity="top"
        android:textColor="#000000"/>

</RelativeLayout>