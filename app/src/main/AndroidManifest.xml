<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="org.mpardalos.homeworkmanager"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TaskList"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".TaskAdd"
            android:label="@string/title_activity_task_add"
            android:parentActivityName=".TaskList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.mpardalos.homeworkmanager.TaskList"/>
        </activity>
        <activity
            android:name=".TaskEdit"
            android:label="@string/title_activity_task_details"
            android:parentActivityName=".TaskList">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.mpardalos.homeworkmanager.TaskList"/>
        </activity>
        <activity
            android:name=".SetupActivity"
            android:label="@string/title_activity_setup">
        </activity>
    </application>

</manifest>
